<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RotateLoading">
        <attr name="loading_width" format="dimension"/>
        <attr name="loading_color" format="color"/>
        <attr name="shadow_position" format="integer"/>
        <attr name="loading_speed" format="integer"/>
    </declare-styleable>


    <declare-styleable name="SimpleTitleBar">
        <!--标题-->
        <attr name="title" format="string"/>
        <!--左边图标-->
        <attr name="leftResource" format="reference"/>
        <!--左边文字-->
        <attr name="leftText" format="string"/>
        <!--右边图标-->
        <attr name="rightResource" format="reference"/>
        <!--右边文字-->
        <attr name="rightText" format="string"/>
        <attr name="showLeft" format="boolean"/>
        <attr name="showTitle" format="boolean"/>
        <attr name="showRight" format="boolean"/>
        <attr name="leftTextColor" format="color"/>
        <attr name="titleColor" format="color"/>
        <attr name="rightTextColor" format="color"/>
    </declare-styleable>


    <declare-styleable name="CircleProgressBar">
        <!--进度颜色-->
        <attr name="progressColor" format="color"/>
        <!--进度背景颜色-->
        <attr name="bgColor" format="color"/>
        <!--进度宽度-->
        <attr name="strokeWidth" format="dimension"/>
        <!--起始角度-->
        <attr name="startAngle" format="float"/>
    </declare-styleable>

</resources>